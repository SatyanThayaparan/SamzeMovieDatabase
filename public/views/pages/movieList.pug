doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title SAMZE Movie Database
  link(rel='shortcut icon' type='image/x-icon' href='/pictures/DBLogo.png')
  // Custom CSS
  link(rel='stylesheet' href='/mainCSS/movieListStyles.css')
  link(rel='stylesheet' href='/mainCSS/navbarStyles.css')
  link(href='/css/bootstrap.css' rel='stylesheet')
  link(href='/css/bootstrap-grid.min.css' rel='stylesheet')
  // Material Design Bootstrap
  link(href='https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.10.1/css/mdb.min.css' rel='stylesheet')

include ../partials/header

 
div#movieList
  h1(style='text-align: center;')
    b Available Movies

  #myBox
    #signUpBox
      form#Form.form-row(action = '/movieList/' method ='post')
        .form-group.mx-md-3.mb-2
          label(for='inputTitle') Search for a Movie:
          input#inputTitle.form-control(type='text' name='title' placeholder='' required)

  div.row#briefInfo
  each movie in movies
      div.column
        div.container  
          h3 #{movie.Title}
          a#imageLink(href =movie.Title)
            img.image(src= movie.Poster, alt="" width="200px" height = "300px")
          div.middle
            a#imageLink(href =movie.Title)
              div.text View More
