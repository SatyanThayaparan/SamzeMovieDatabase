if current > 1
  - let url = "http://localhost:3000/movieList?page=" + (current-1)
  - if(qstring.length > 0){ url += "&" + qstring; }
  a(href=url) Previous
  | 
- url = "http://localhost:3000/movieList?page=" + (current+1)
- if(qstring.length > 0){ url += "&" + qstring; }
a(href=url) Next


